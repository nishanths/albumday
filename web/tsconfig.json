{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "noImplicitReturns": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@shared": ["shared/*"]
    },
  },
  "include": [
    "*.ts",
    "*.tsx",
    "components/**/*",
    "shared/**/*"
  ]
}
